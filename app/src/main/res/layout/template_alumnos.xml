<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="#90EFCE"
    android:backgroundTint="#4F5C06"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="id"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="nombre"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="grupo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="carrera"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="semestre"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="numero de control"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mostrar_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="mostrar_id"
            android:textSize="20sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/mostrar_nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="mostrar_nombre"
            android:textSize="20sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/mostrar_grupo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="mostrar_grupo"
            android:textSize="20sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/mostrar_carrera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="mostrar_carrera"
            android:textSize="20sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/mostrar_semestre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="mostrar_semestre"
            android:textSize="20sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/mostrar_numero_control"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="#F8F1B1"
            android:backgroundTint="#FAF89B"
            android:fontFamily="sans-serif-thin"
            android:text="mostrar_numero_control"
            android:textSize="20sp"
            android:typeface="normal" />

    </LinearLayout>

</LinearLayout>